{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "js",
        "json",
        "purescript",
        "typescript",
        "typescriptreact",
      ],
    "languageserver": {
        "bash": {
          "command": "bash-language-server",
          "args": ["start"],
          "filetypes": ["sh"],
          "ignoredRootPaths": ["~"]
        }
    },
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-14",
        "path": "/usr/local/opt/openjdk/bin/java",
        "default": true
      },
    ]
}
